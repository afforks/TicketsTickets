= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :id => 'signupform') do |f|
  = devise_error_messages!
  %p
    = f.label :full_name, 'Full Name', :class => 'required'
    %br/
    = f.text_field :full_name, :class => 'full'
  %p
    = f.label :email, :class => 'required'
    %br/
    = f.text_field :email, :class => 'full'
  %p
    = f.label :password, :class => 'required'
    %br/
    = f.password_field :password, :class => 'full'
  %p
    = f.label :password_confirmation, :class => "required"
    %br/
    = f.password_field :password_confirmation, :class => 'full'
  %p= f.submit "Register", :class => 'btn btn-green big'
%br/

