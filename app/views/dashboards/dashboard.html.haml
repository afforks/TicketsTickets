            %td.ta-right $0.00
    .column.width3
      %h4
        Sales:
        %a{:href => "#"} 1
      %hr/
      %table.no-style.full
        %tbody
          %tr
            %td Clients This Month
            %td.ta-right
              %a{:href => "#"} 1
            %td.ta-right
          %tr
            %td Sales This Month
            %td.ta-right
              %a{:href => "#"} 9
            %td.ta-right $900.00
          %tr
            %td Clients Total
            %td.ta-right
              %a{:href => "#"} 5
            %td.ta-right
          %tr
            %td Sales Total
            %td.ta-right
              %a{:href => "#"} 9
            %td.ta-right $900.00
  .colgroup.leading
    .column.width3.first
      %h4 Client Stats
      %hr/
      %table.no-style.full
        %tbody
          %tr
            %td Active
            %td.ta-right 1/5
            %td
              #progress1.progress.full.progress-green
                %span
                  %b
          %tr
            %td Pending
            %td.ta-right 2/5
            %td
              #progress2.progress.full.progress-blue
                %span
                  %b
          %tr
            %td Suspended
            %td.ta-right 2/5
            %td
              #progress3.progress.full.progress-red
                %span
                  %b
    .column.width3
      %h4 Reports
      %hr/
      %p
        %b Sales this year
      #placeholder{:style => "height:100px"}
  .clear  
