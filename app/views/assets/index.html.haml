- title 'Assets'

%table#cassetlist.no-style.full
  %thead
    %tr
      %th Name
      %th Location
      %th Classification
      %th Asset Tag
      %th IP
      %th User
      %th Company
      %th
  %tbody
    - @assets.each do |asset|
      %tr
        %td= link_to asset.name, asset_path(asset.slug)
        %td= asset.location
        %td= asset.classification
        %td= asset.asset_tag
        %td= asset.ip
        %td= asset.user.full_name
        %td= asset.company.name
        %td= link_to image_tag('/images/delete.png'), asset, :confirm => 'Are you sure?', :method => :delete, :class => 'delete'
#info.last
  %span.dashboard_button
    = link_to new_asset_path, :class => 'btn' do
      = content_tag :span,"&nbsp;", :class => 'icon icon-add'
      Create Asset
    
#info
